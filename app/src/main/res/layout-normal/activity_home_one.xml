<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marto.my_school_revierwer_4.Home_one">


    <Button
        android:text="@string/sign_up"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_up"
        android:onClick="click"
        android:textSize="20sp"
        android:layout_marginTop="188dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_sign_in"
        android:layout_alignEnd="@+id/btn_sign_in"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <Button
        android:text="@string/sign_in"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_in"
        tools:ignore="RelativeOverlap"
        android:onClick="click"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/btn_sign_up"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
</RelativeLayout>

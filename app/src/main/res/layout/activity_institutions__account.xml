<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marto.my_school_revierwer_4.com.marto.accounts.Institutions_Account">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/viewFlipper"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_edit_school_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click_school_account"
        android:text="Edit Account"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/viewFlipper"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tabLayout"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn_image_upload"
        android:layout_alignRight="@+id/btn_edit_school_account"
        android:layout_alignEnd="@+id/btn_edit_school_account">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communications"
            tools:ignore="HardcodedText" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            tools:ignore="HardcodedText" />

    </android.support.design.widget.TabLayout>

    <Button
        android:id="@+id/btn_edit_school_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewFlipper"
        android:onClick="click_school_account"
        android:text="EXTRA INFO"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_image_upload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="click_school_account"
        android:text="UPLOAD IMAGES"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/btn_edit_school_account"
        android:layout_alignBottom="@+id/btn_edit_school_account"
        android:layout_toLeftOf="@+id/btn_edit_school_account"
        android:layout_toStartOf="@+id/btn_edit_school_account"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>

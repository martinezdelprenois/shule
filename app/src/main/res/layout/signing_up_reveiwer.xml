<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/account_name_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="182dp" />

    <TextView
        android:text="@string/password___"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/account_reviewer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/email_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_email_reviewer"
        android:layout_below="@+id/password_reviewer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_reveiwer"
        android:text="@string/email_reviewer"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:alpha=".5"
        android:layout_alignBaseline="@+id/textview_email_reviewer"
        android:layout_alignBottom="@+id/textview_email_reviewer"
        android:layout_alignLeft="@+id/account_reviewer"
        android:layout_alignStart="@+id/account_reviewer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/account_name_reviewer"
        android:ems="10"
        android:id="@+id/account_reviewer"
        android:selectAllOnFocus="true"
        android:alpha=".5"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_reviewer"
        android:text="@string/password_reviewer"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:alpha=".5"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/account_reviewer"
        android:layout_alignStart="@+id/account_reviewer" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marto.my_school_revierwer_4.com.marto.login.Login_as">

    <Button
        android:id="@+id/btn_institution_login_as"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:onClick="click_login_as"
        android:text="AS INSTITUTION"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_reviewer_login_as"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_institution_login_as"
        android:layout_alignStart="@+id/btn_institution_login_as"
        android:layout_below="@+id/btn_institution_login_as"
        android:layout_marginTop="58dp"
        android:onClick="click_login_as"
        android:text="AS REVIEWER"
        tools:ignore="HardcodedText" />
</RelativeLayout>
